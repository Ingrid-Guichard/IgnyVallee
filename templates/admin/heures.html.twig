{% extends 'base.html.twig' %}

{% block title %} Gestion horaire {%  endblock %}

{% block content %}

        <div class="container-fluid">
            <div class="col-6">
                <a href="{{ path('adherents_index') }}">
                    <img src="{{ asset('/build/images/return.svg') }}" class="button_return mt-3 ml-4"  alt="Retour"
                         width="50px" height="50px">
                </a>
            </div>

            <div class="row justify-content-around">
                <div class="col-auto">
                    <h1 class="mt-2"> Administrateurs </h1>
                    <table class="table table-responsive">
                        <div class ="row align-items-center">
                            <thead>
                            <tr>
                                <th>Administrateur</th>

                                <th>Heures de gestion</th>

                                <th>Action</th>
                            </tr>
                            </thead>
                        </div>

                        <tbody>
                        {% for admin in admins %}
                            <tr>
                                <td>{{ admin.adherent.prenom }} {{ admin.adherent.nom }}</td>
                                <td>{{ admin.heuresGestionAdmin }}</td>
                                <td>
                                    <a href="{{ path('heures_gestion_admins_edit', {'id': admin.id}) }}">
                                        <img src="{{ asset('/build/images/edit.svg') }}" class="button_atelier_index ml-1 "  alt="Modifier">
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>


                    </table>
                </div>
                <div class="col-auto">
                    <h1 class="mt-2"> Référents </h1>
                    <table class="table table-responsive">
                        <div class ="row align-items-center">
                            <thead>
                            <tr>
                                <th>Référents</th>

                                <th>Heures de gestion</th>

                                <th>Action</th>
                            </tr>
                            </thead>
                        </div>

                        <tbody>
                        {% for referent in referents %}
                            <tr>
                                <td>{{ referent.adherent.prenom }} {{ referent.adherent.nom }}</td>
                                <td>{{ referent.heuresGestionReferent }}</td>
                                <td>
                                    <a href="{{ path('heures_gestion_referents_edit', {'id': referent.id}) }}">
                                        <img src="{{ asset('/build/images/edit.svg') }}" class="button_atelier_index ml-1 "  alt="Modifier">
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>


                    </table>
                </div>
            </div>
        </div>

    {% endblock %}

