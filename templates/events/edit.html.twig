{% extends 'base.html.twig' %}

{% block title %}Edit Events{% endblock %}

{% block content %}

    <div class="formulaire mr-4 ml-4">
        <div class="card border-danger mb-3 mt-5" >
            <div class="card-header">
                <div class="row">
                    <div class="col-4">
                        <a href="{{ path('event_calendar') }}">
                            <img src="{{ asset('/build/images/return.svg') }}" class="button_return mt-3 ml-4"  alt="Retour"
                                 width="50px" height="50px">
                        </a>
                    </div>
                    <div class="col-4">
                        <h1 class="mt-2"> Edition d'un évènement </h1>
                    </div>
                    <div class="col-4">
                        {{ include('events/_delete_form.html.twig') }}
                    </div>
                </div>

            </div>
            <div class="card-body text-danger">

                {# Début du formulaire #}
                {{ form_start(form) }}

                {# Changement du label de l'attribut "nom"   #}
                {{ form_label(form.nom,
                    "Titre de l'évènement") }}
                {# Affichage de la zone à remplir du formulaire pour l'attribut "nom" #}
                {{ form_widget(form.nom,{'attr': {
                    'placeholder': "Titre de l'évènement",
                    'class': "mb-2 mt-1"}} )}}

                <div class="row justify-content-center">
                    <div class="col-6">
                        {{ form_label(form.dateDebut,
                            "Date de début") }}
                        {{ form_widget(form.dateDebut,{'attr': {
                            'class': "mb-2 mt-1"}} )}}
                    </div>

                    <div class="col-6">
                        {{ form_label(form.dateFin,
                            "Date de fin") }}
                        {{ form_widget(form.dateFin,{'attr': {
                            'class': "mb-4 mt-1"}} )}}
                    </div>
                </div>

                {{ form_label(form.prix,
                    "Prix de participation") }}
                {{ form_widget(form.prix, {'attr': {
                    'placeholder': "Prix de l'évènement",
                    'class': "mb-4 mt-1"}} )}}

                {{ form_label(form.description,
                    "Description de l'évènement") }}
                {{ form_widget(form.description, {'attr': {
                    'placeholder': "Description",
                    'class': "mb-4 mt-1" }}) }}

                {{ form_label(form.partenaire,
                    "Partenaire (facultatif)") }}
                {{ form_widget(form.partenaire, {'attr': {
                    'class': "mb-2 mt-1" }}) }}

                {{ form_label(form.admins,
                    "Organisateur(s)") }}
                {{ form_widget(form.admins, {'attr': {
                    'class': "mb-2 mt-1" }}) }}



                <div class="button_Formulaire">
                    <button type="submit" class="btn btn-outline-success mb-4 mt-3">Modifier l'évènement</button>
                </div>

                {# Fin du formulaire #}
                {{ form_end(form) }}
            </div>
        </div>
    </div>





{% endblock %}
