{# templates/list/index.html.twig #} {% extends 'base.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mb-3 mt-3">
                    <div class="card-body">
                        <div class="card-header">Liste des responsables de l'association</div>
                        {% if app.user != null %}
                            <table class="table">
                                <tr>
                                    <th>Bureau</th>
                                    <th>Titulaires</th>
                                </tr>
                                {% for key, item in bureau_members %}
                                    <tr>
                                        <td>{{ key }}</td>
                                        <td>{{ item }}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        {% endif %}
                    </div>
                </div>
                {% if app.user == null %}
                    <a href="{{ path('app_login') }}" class="btn btn-info">
                        You need to login to see the list ðŸ˜œðŸ˜œ >></a
                    >
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
