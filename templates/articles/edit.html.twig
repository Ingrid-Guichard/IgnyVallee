{% extends 'base.html.twig' %}

{% block title %}Modifier l'article - Igny Vall√©e Comestible{% endblock %}

{% block content %}
    <div class="row mb-3">
        <div class="col-11 mt-2">
            <a href="{{ path('articles_show', {'id': article.id}) }}">
                <img src="{{ asset('build/images/return.svg') }}" class="button_return" alt="Retour">
            </a>
        </div>
        <div class="col-1 pb-3 mt-0">
            {{ include('articles/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="formulaire">
        <div class="card new_article border-danger">
            <div class="card-header font-weight-bold text-danger">Modifier l'article</div>
            <div class="card-body">
                {{ form_start(form) }}

                {{ form_widget(form) }}
                <div class="row justify-content-md-center">
                    <div class="col-4">
                        <button class="btn btn-success" >{{ button_label|default('Enregistrer les modifications') }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
