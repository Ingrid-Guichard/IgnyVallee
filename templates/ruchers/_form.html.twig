<div class="formulaire mr-4 ml-4">
    <div class="card border-danger mb-3 mt-5" >
        <div class="card-header">
            <div class="row">
                <div class="col-4">
                    <a href="{{ path('ruchers_index') }}">
                        <img src="{{ asset('/build/images/return.svg') }}" class="button_return mt-3 ml-4"  alt="Retour"
                             width="50px" height="50px">
                    </a>
                </div>
                <div class="col-4">
                    <h1 class="mt-2"> Création d'un rucher </h1>
                </div>
            </div>
        </div>
        <div class="card-body text-danger">

            {{ form_start(form) }}

            {# Changement du label de l'attribut "nom"   #}
            {{ form_label(form.nomRucher,
                "Nom de la ruche") }}
            {# Affichage de la zone à remplir du formulaire pour l'attribut "nom" #}
            {{ form_widget(form.nomRucher,{'attr': {
                'class': "mb-2 mt-1"}} )}}

            {{ form_label(form.descriptionRucher,
                "Description") }}
            {{ form_widget(form.descriptionRucher,{'attr': {
                'class': "mb-2 mt-1"}} )}}

            {{ form_label(form.lieuRucher,
                "Emplacement") }}
            {{ form_widget(form.lieuRucher,{'attr': {
                'class': "mb-2 mt-1"}} )}}

            {{ form_label(form.partenaireRucher,
                "Partenaire (Facultatif)") }}
            {{ form_widget(form.partenaireRucher,{'attr': {
                'class': "mb-2 mt-1"}} )}}

            {{ form_label(form.dateCreationRucher,
                "Date de création") }}
            {{ form_widget(form.dateCreationRucher,{'attr': {
                'class': "mb-2 mt-1"}} )}}

            <div class="button_Formulaire">
                <button type="submit" class="btn btn-outline-success mb-4 mt-3">Ajouter</button>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
</div>

