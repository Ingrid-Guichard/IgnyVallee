{% extends 'base.html.twig' %}

{% block title %}Modifier Arbre{% endblock %}

{% block content %}
<div class="formulaire mr-4 ml-4">
    <div class="card border-danger mb-3 mt-5" >
        <div class="card-header">
            <div class="row">
                <div class="col-4">
                    <a href="{{ path('arbres_index') }}">
                        <img src="{{ asset('/build/images/return.svg') }}" class="button_return mt-3 ml-4"  alt="Retour"
                             width="50px" height="50px">
                    </a>
                </div>
                <div class="col-4">
                    <h1 class="mt-2"> Edition d'un arbre </h1>
                </div>
                <div class="col-4">
                    {{ include('arbres/_delete_form.html.twig') }}
                </div>

                <div class="card-body text-danger">
                    {{ form_start(form) }}

                    {% if is_granted('ROLE_ADMIN') or app.user.isReferentV == true %}

                        {{ form_label(form.numeroArbre,
                            "Numéro de l'arbre ") }}
                        {{ form_widget(form.numeroArbre,{'attr': {
                            'placeholder': "ex : 10",
                            'class': "mb-2 mt-1"}} )}}

                        {{ form_label(form.adherent,
                            "Parrain") }}
                        {{ form_widget(form.adherent,{'attr': {
                            'class': "mb-2 mt-1"}} )}}



                        {{ form_label(form.etatArbre,
                            "Etat de l'arbre (facultatif)") }}
                        {{ form_widget(form.etatArbre,{'attr': {
                            'placeholder': "ex : Bon état",
                            'class': "mb-2 mt-1"}} )}}

                        {{ form_label(form.ageArbre,
                            "Age de l'arbre (facultatif)") }}
                        {{ form_widget(form.ageArbre,{'attr': {
                            'placeholder': "ex : 10",
                            'class': "mb-2 mt-1"}} )}}


                    {% else %}
                        {{ form_label(form.numeroArbre,
                            "Numéro de l'arbre ") }}
                        {{ form_widget(form.numeroArbre,{'attr': {
                            'placeholder': "ex : 10",
                            'class': "mb-2 mt-1",
                            'disabled': "disabled"}} )}}

                        {{ form_label(form.adherent,
                            "Parrain") }}
                        {{ form_widget(form.adherent,{'attr': {
                            'class': "mb-2 mt-1",
                            'disabled': "disabled"}} )}}

                        {{ form_row(form.etatArbre,{'attr': {
                            'placeholder': "ex : Bon état",
                            'class': "mb-2 mt-1"}} )}}

                        {{ form_row(form.ageArbre,{'attr': {
                            'placeholder': "ex : 10",
                            'class': "mb-2 mt-1"}} )}}

                    {% endif %}


                    <div class="button_Formulaire">
                        <button type="submit" class="btn btn-outline-success mb-4 mt-3">Modifier l'arbre</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
