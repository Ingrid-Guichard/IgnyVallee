{% extends 'base.html.twig' %}

{% block title %}Referents index{% endblock %}

{% block content %}
    <h1>Liste des référents <a href="{{ path('referents_new') }}" class="btn btn-success mt-2 button_creer">Ajouter un référent</a> </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>HeuresGestionReferent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for referent in referents %}
            <tr>
                <td>{{ referent.id }}</td>
                <td>{{ referent.heuresGestionReferent }}</td>
                <td>
                    <a href="{{ path('referents_show', {'id': referent.id}) }}">show</a>
                    <a href="{{ path('referents_edit', {'id': referent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
